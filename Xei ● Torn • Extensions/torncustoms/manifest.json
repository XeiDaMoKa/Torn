{
  "name": "Xei ● Torn • Customs",
  "version": "0.5",
  "description": "Colorizes menu icons and adds icons to Events",
  "author": "XeiDaMoKa [2373510]",
  "manifest_version": 3,

  "icons": {
    "16": "icons/1xeiTornCustomsIcon16x16.png",
    "32": "icons/1xeiTornCustomsicon32x32.png",
    "48": "icons/1xeiTornCustomsicon48x48.png",
    "128": "icons/1xeiTornCustomsicon128x128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
],

  "action": {
    "default_icon": {
    "16": "icons/1xeiTornCustomsIcon16x16.png",
    "32": "icons/1xeiTornCustomsicon32x32.png",
    "48": "icons/1xeiTornCustomsicon48x48.png",
    "128": "icons/1xeiTornCustomsicon128x128.png"
    },
    "default_title": "Torn ● Customs • Settings",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.torn.com/*"],
      "js": ["jquery.js" , "customs.js"]
    }
  ]
}